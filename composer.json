{
    "name": "setono/sylius-feed-plugin",
    "type": "sylius-plugin",
    "description": "Plugin to generate feeds within the Sylius ecommerce platform",
    "license": "MIT",
    "require": {
        "php": "^7.2",
        "ext-json": "*",
        "league/flysystem-bundle": "^1.1",
        "psr/event-dispatcher": "^1.0",
        "ramsey/uuid": "^3.7",
        "setono/doctrine-orm-batcher-bundle": "^0.3.1",
        "sylius/sylius": "^1.3",
        "symfony/event-dispatcher": "^4.3 || ^5.0",
        "symfony/messenger": "^4.3 || ^5.0",
        "symfony/serializer": "^4.3 || ^5.0",
        "symfony/workflow": "^4.3 || ^5.0",
        "thecodingmachine/safe": "^0.1.15",
        "webmozart/assert": "^1.5"
    },
    "conflict": {
        "doctrine/persistence": "1.3.2"
    },
    "require-dev": {
        "behat/behat": "^3.4",
        "behat/mink": "^1.7@dev",
        "behat/mink-browserkit-driver": "^1.3",
        "behat/mink-extension": "^2.2",
        "behat/mink-selenium2-driver": "^1.3",
        "friends-of-behat/page-object-extension": "^0.3",
        "friends-of-behat/suite-settings-extension": "^1.0",
        "friends-of-behat/symfony-extension": "^2.0",
        "friends-of-behat/variadic-extension": "^1.1",
        "kalessil/production-dependencies-guard": "dev-master",
        "korbeil/phpstan-generic-rules": "^0.2.1",
        "lakion/mink-debug-extension": "^1.2.3",
        "localheinz/composer-normalize": "^1.3",
        "phpspec/phpspec": "^5.0",
        "phpstan/phpstan": "^0.11",
        "phpstan/phpstan-doctrine": "^0.11",
        "phpstan/phpstan-strict-rules": "^0.11",
        "phpstan/phpstan-webmozart-assert": "^0.11",
        "phpunit/phpunit": "^8.0",
        "sensiolabs/security-checker": "^5.0",
        "sylius-labs/coding-standard": "^3.1",
        "symfony/browser-kit": "^3.4 || ^4.3 || ^5.0",
        "symfony/debug-bundle": "^3.4 || ^4.3 || ^5.0",
        "symfony/dotenv": "^4.3 || ^5.0",
        "symfony/intl": "^3.4 || ^4.3 || ^5.0",
        "symfony/web-profiler-bundle": "^3.4 || ^4.3 || ^5.0",
        "symfony/web-server-bundle": "^3.4 || ^4.3 || ^5.0",
        "thecodingmachine/phpstan-safe-rule": "^0.1.4"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "Setono\\SyliusFeedPlugin\\": "src/",
            "Tests\\Setono\\SyliusFeedPlugin\\": "tests/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/Application/Kernel.php"
        ]
    },
    "prefer-stable": true,
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse -c phpstan.neon -l max src/",
        "check-style": "vendor/bin/ecs check src/ spec/ tests/",
        "fix-style": "vendor/bin/ecs check src/ spec/ tests/ --fix",
        "phpspec": "vendor/bin/phpspec run",
        "phpunit": "vendor/bin/phpunit",
        "test": [
            "vendor/bin/phpunit",
            "vendor/bin/phpspec run"
        ]
    }
}
